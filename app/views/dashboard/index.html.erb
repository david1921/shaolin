<div class="box">
  <h2>User Options</h2>
  <% if current_user.is_system? %>
    <div id='system_user_links'>
      <ul>
        <li>System</li>
        <li><%= link_to 'Setup user', new_system_user_path %></li>
        <li><%= link_to 'Search users', system_users_path %></li>
      </ul>
    </div>
  <% end %>

  <% if current_user.is_admin? %>
    <div id='admin_user_links'>

      <ul>
        <li>Admin</li>
        <li><%= link_to 'Setup merchant', new_admin_merchant_path %></li>
        <li><%= link_to 'Search merchants', admin_merchants_path %></li>
        <li><%= link_to 'Merchant Validations', admin_merchant_validations_path %></li>
      </ul>
    </div>
  <% end %>

  <% if current_user.is_sales? %>
    <div id='sales_user_links'>

      <ul>
        <li>Sales</li>
        <li><%= link_to 'Setup merchant', new_sales_merchant_path %></li>
        <li><%= link_to 'Search merchants', sales_path %></li>
      </ul>
    </div>
  <% end %>
</div>
